---
import { site } from '../data/site.ts'
import ThemeToggle from './ThemeToggle.tsx'
import SocialIcons from './SocialIcons.tsx'

const nav = [
  { link: '/blog', name: 'Blog' },
  { link: '/projects', name: 'Projects' },
  { link: 'https://github.com/David-Huson/', name: 'Github', target: '_blank' },
]
---

<div class='max-w-6xl  mx-auto px-4 py-10 md:py-20'>
  <div class='flex  md:flex-row justify-between items-center'>
    <div class='flex flex-col'>
      <a href='/'>
        <h1 class='font-semibold text-xl dark:text-gray-100'>
          {site.name}
        </h1>
        <p class='text-base font-light text-gray-500 dark:text-gray-300'>
          ASPIRING SOFTWARE ENGINEER
        </p>
      </a>
    </div>
    <div class='space-x-8 hidden md:block'>
      <ul class='flex space-x-4'>
        {nav.map((item) => (
          <li>
            <a
              href={item.link}
              target={item.target}
              rel="noopener noreferrer"
              class="text-base text-gray-600 dark:text-gray-300 font-normal"
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
    <div class='space-x-4 flex flex-row items-center'>
      <!-- Social Icons -->
      <SocialIcons />
      <!-- dark mode toggle -->
      <ThemeToggle />
    </div>
  </div>

  <div class='space-x-8 block md:hidden mt-4'>
    {nav.map((item) => (
      <a
        href={item.link}
        target={item.target}
        rel="noopener noreferrer"
        class="text-base font-normal text-gray-600 dark:text-gray-300"
      >
        {item.name}
      </a>
    ))}
  </div>
</div>

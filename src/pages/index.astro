---
import About from '../components/About.astro'
import Hero from '../components/Hero.astro'
import Navigation from '../components/Navigation.astro'
import BaseLayout from '../layouts/BaseLayout.astro'

const title = 'David Huson | Software Engineer'
const description =
  'This is a starter repo for an blog built with Astro including open graph tags, canonical urls, RSS, sitemap support.'
const permalink = 'https://example.com/'
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  canonicalURL={Astro.canonicalURL.href}
>
  <div class='bg-white dark:bg-slate-700 text-black dark:text-white'>
    <div class='container mx-auto'>
      <Navigation client:load />
      <Hero />
      <About />
      <h1 class='text-5xl'>Todo</h1>
      <div>Projects</div>
      <div>Posts</div>
      <div>Footer</div>
    </div>
  </div>
</BaseLayout>
